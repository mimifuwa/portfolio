---
const { iconImagePath, name, account, description} = Astro.props.frontmatter || Astro.props;
---

<div class="flex flex-row items-center justify-center py-3 mb-5">
    <img src={iconImagePath} alt="" class="user-icon w-24 md:w-28 mr-5 my-3">
    <div class="flex flex-col w-full">
        <div class="text-2xl md:text-3xl my-3 font-bold">{name}<span class="block font-normal text-sm sub-text">{account}</span></div>
        <div>{description}</div>
    </div>
</div>